{
    "xsappname": "gamenight",
    "tenant-mode": "dedicated",
    "description": "Security profile of called application",
    "scopes": [
        {
            "name": "$XSAPPNAME.Edit",
            "description": "Gamenight Scope to use the full app."
        },
        {
            "name": "$XSAPPNAME.Admin",
            "description": "Gamenight Scope to use the app as administrator."
        },
        {
            "name": "$XSAPPNAME.UserConsumer",
            "description": "User management Scope for all user."
        },
        {
            "name": "$XSAPPNAME.UserAdmin",
            "description": "User management Scope for administrator."
        },
        {
            "name": "xs_authorization.read",
            "description": "Read authorization information from UAA"
        },
        {
            "name": "xs_authorization.write",
            "description": "Write authorization information to UAA"
        }
    ],
    "role-templates": [
        {
            "name": "Gamenight_Token_Exchange",
            "description": "UAA",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "Gamenight",
            "scope-references": [
                "$XSAPPNAME.Edit"
            ],
            "description": "generated"
        },
        {
            "name": "Admin",
            "scope-references": [
                "$XSAPPNAME.Admin"
            ],
            "description": "generated"
        },
        {
            "name": "UserConsumer",
            "scope-references": [
                "$XSAPPNAME.UserConsumer"
            ],
            "description": "generated"
        },
        {
            "name": "UserAdmin",
            "scope-references": [
                "$XSAPPNAME.UserAdmin"
            ],
            "description": "generated"
        }
    ]
}